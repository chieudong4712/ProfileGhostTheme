{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}


<div class="slider slider-left" {{#if tag.image}} style="background-image: url({{tag.image}})" {{else}}{{#if @blog.cover}} style="background-image: url({{@blog.cover}})"{{/if}}{{/if}}>
  <div class="container">
    <div class="middle col-md-8">
      <div class="caption">
        	<h1>{{tag.name}}</h1>
        	<p class="description">
            {{#if tag.description}}
  	          {{tag.description}}
    	      {{else}}
  	          A {{pagination.total}}-post collection
  	        {{/if}}
          </p>
      </div>
    </div>
  </div>
</div>

<div class="contain-wrapper">
  <div class="container ">
    <div class="row ">
      <div class="post-list col-md-8">

      	{{! This is the post loop - each post will be output using this markup }}
  			{{> loop}}

        {{pagination}}

      </div>
      {{> sidebar}}
    </div>
  </div><!-- /.container -->
</div>